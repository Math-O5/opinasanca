<style>

.card-sugestion {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 120%;
}

.card-sugestion:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container-sugestion {
  padding: 2px 16px;
  margin: 8px;
  font-size: 14px;
}

.image-container {
  padding: 0px 0 px;
}
</style>

<% all_sugestion.each do |sugestion| %>

  
    <div class="small-12 medium-4 column">
      <div class="small-12 medium-10 column">
        <div class="card-sugestion">

          <div class="image-container" data-equalizer-watch>
            <% if sugestion.image.present? %>
              <%= image_tag sugestion.image_url(:large), alt: sugestion.image.title.unicode_normalize %>
            <% end %>
          </div>

          <div class="container-sugestion">  
            <h4><%= link_to sugestion.title, sugestion %></h4>
            <p><%= sugestion.display_name %></p>
          </div>

        </div>
      </div>
    </div>

<% end %>
